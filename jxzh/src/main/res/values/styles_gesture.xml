<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="gesture_login_bg">
        <item name="android:background">@drawable/gesture_login_bg_new</item>
    </style>
    <!-- 手势密码相关 -->
    <style name="tv_white16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_white20">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_black16">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_red20">
        <item name="android:textColor">#A12D3F</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pull_refresh_bg">
        <item name="android:background">#F7F7F7</item>
    </style>

    <style name="title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#D2D2D2</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">53dp</item>
    </style>

    <style name="title_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#D2D2D2</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>

</resources>