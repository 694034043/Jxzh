<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/yztyt_base_action_bar"/>
    
    <RelativeLayout 
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/yzt_yingtan_main_bg"/>
        
        <ImageView 
            android:id="@+id/iv_yztyt_main_title"
            android:layout_height="60dp"
            android:layout_width="180dp"
            android:layout_marginTop="-60dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yztyt_main_title"/>
        
        <ImageView 
            android:id="@+id/iv_main_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/yzt_yingtan_main_circle"/>
        
        <LinearLayout 
            android:id="@+id/ll_main_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">
    
		    <ImageView 
		        android:id="@+id/iv_main_btn02"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:background="@drawable/yzt_yingtan_main_button02"
		        android:layout_weight="1"/>
		    
            <ImageView 
	            android:id="@+id/iv_main_btn01"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/yzt_yingtan_main_button01"
		        android:gravity="center"
		        android:layout_weight="1"/>
            
        </LinearLayout>
        
    </RelativeLayout>
    
</LinearLayout>