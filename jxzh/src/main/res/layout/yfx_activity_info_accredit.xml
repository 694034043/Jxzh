<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_activity_title" />

    <LinearLayout
        android:id="@+id/llAccredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/common_selector_list"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意《"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:id="@+id/tvAccredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="征信查询授权书"
            android:textColor="@color/redText"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="》"
            android:textSize="@dimen/textview_normal_size" />

        <ImageView
            android:id="@+id/ivAccredit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/bg_ok" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLimitTreaty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/common_selector_list"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意《"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:id="@+id/tvLimitTreaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国银行贷款合同"
            android:textColor="@color/redText"
            android:textSize="@dimen/textview_normal_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="》"
            android:textSize="@dimen/textview_normal_size" />

        <ImageView
            android:id="@+id/ivLimitTreaty"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:src="@drawable/bg_ok" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/yfx_shape_check_code"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/checkCode"
                android:textColor="@color/white"
                android:textSize="@dimen/textview_normal_size" />

            <EditText
                android:id="@+id/etCheckCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColor="@color/white" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSendCheckCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="2"
            android:background="@drawable/yfx_shape_get_check_code"
            android:gravity="center_horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="11dp"
            android:text="@string/sendCheckCode"
            android:textColor="@color/white"
            android:textSize="@dimen/textview_normal_size" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOk"
        style="@style/BigButton_Margin"
        android:layout_gravity="center_horizontal"
        android:text="@string/sure" />

</LinearLayout>