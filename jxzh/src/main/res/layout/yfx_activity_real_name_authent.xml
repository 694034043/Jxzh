<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="姓　　名"
                        android:textSize="@dimen/textview_normal_size" />

                    <EditText
                        android:id="@+id/etName"
                        style="@style/edit_text_shape"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:ems="10"
                        android:paddingLeft="8dp"
                        android:textSize="@dimen/textview_normal_size" >

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="性　　别"
                        android:textSize="@dimen/textview_normal_size" />

                    <TextView
                        android:id="@+id/tvGender"
                        style="@style/text_view_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:drawableRight="@drawable/down"
                        android:ems="10"
                        android:gravity="center"
                        android:text="@string/choose"
                        android:textSize="@dimen/textview_normal_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="身份证号"
                        android:textSize="@dimen/textview_normal_size" />

                    <EditText
                        android:id="@+id/etIdentityCard"
                        style="@style/edit_text_shape"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:digits="1234567890xX"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="18"
                        android:paddingLeft="8dp"
                        android:textSize="@dimen/textview_normal_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="手机号码"
                        android:textSize="@dimen/textview_normal_size" />

                    <EditText
                        android:id="@+id/etPhoneNum"
                        style="@style/edit_text_shape"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="4"
                        android:ems="10"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="8dp"
                        android:textSize="@dimen/textview_normal_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp" >

                <Button
                    android:id="@+id/btnInputAgain"
                    style="@style/SmallButton_Margin"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/inputAgain" />

                <Button
                    android:id="@+id/btnOk"
                    style="@style/SmallButton_Margin"
                    android:layout_width="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="下一步" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>