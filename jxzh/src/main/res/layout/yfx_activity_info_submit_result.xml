<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/title"
        layout="@layout/layout_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="@string/dataPassed"
            android:textColor="@color/blueDark"
            android:textSize="@dimen/textview_little_bigger_size" />

        
    </LinearLayout>

    <Button
        android:id="@+id/btnBackSalaryLoan"
        style="@style/BigButton_Margin"
        android:layout_marginTop="32dp"
        android:text="@string/backToSalaryloan" />

</LinearLayout>