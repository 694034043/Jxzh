<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <include layout="@layout/layout_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 订单 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="订单号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 签证报价 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="签证报价："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 国家 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="国家："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 出国目的 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="出国目的："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>
            <!-- 出国人群 -->

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="出国人群："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="姓名："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 身份证号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="身份证号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 手机号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="手机号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 邮箱 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="邮箱："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
            <!-- 收件地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="收件地址："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/qztAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                style="@style/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/qztMain"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/blue_button_selector"
                        android:gravity="center"
                        android:text="返回首页"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_normal_size" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/llt_btcaradd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/qztApply"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/blue_button_selector"
                        android:gravity="center"
                        android:text="提交"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_normal_size" />
                </LinearLayout>
                
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>