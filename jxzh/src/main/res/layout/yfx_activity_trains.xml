<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/layout_activity_title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray" >

        <ImageView
            android:id="@+id/ivHeader"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/yfx_trains_bg_fnt_header" />

        <ImageView
            android:id="@+id/ivBorder02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ivHeader"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/yfx_trains_bg_foot" />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/yfx_trains_bg_fnt" />

        <LinearLayout
            android:id="@+id/ll_button_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/yfx_trains_btn_apply_big"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llApply2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/btnApply2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/yfx_trains_btn_gak2"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivHeader"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            android:layout_above="@id/ll_button_part"
            android:layout_marginBottom="36dp"
            android:scaleType="fitStart"
            android:visibility="gone"
            android:src="@drawable/yfx_trains_bg_fnt_text" />
    </RelativeLayout>

</LinearLayout>