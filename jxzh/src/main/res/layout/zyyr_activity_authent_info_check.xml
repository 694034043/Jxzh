                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/monthIncome"
                    android:textSize="@dimen/textview_normal_size" />

                <LinearLayout
                    style="@style/edit_text_shape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/etMonthIncome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="9"
                        android:paddingLeft="8dp"
                        android:singleLine="true"
                        android:textSize="@dimen/textview_normal_size" >

                        <requestFocus />
                    </EditText>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="8dp"
                        android:text="@string/rmb" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/houseValue"
                    android:textSize="@dimen/textview_normal_size" />

                <LinearLayout
                    style="@style/edit_text_shape"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/etHouseVa11lue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@null"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="8dp"
                        android:singleLine="true"
                        android:textSize="@dimen/textview_normal_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="8dp"
                        android:text="@string/wan" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="@string/yourCredit"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/etYourCredit"
                    style="@style/text_view_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:maxLength="10"
                    android:paddingLeft="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>