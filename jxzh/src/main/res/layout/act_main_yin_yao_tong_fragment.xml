<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="9dp"
            android:src="@drawable/left_white_back" />


        <TextView
            android:id="@+id/tv_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_vp_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_top_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <com.bocop.zyt.jx.view.indicator.CirclePageIndicator
            android:id="@+id/vp_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp" />
    </RelativeLayout>
            
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_yyt_bg"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:orientation="vertical">
        
        <ImageView
            android:id="@+id/tv_item_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yyt_main_item_03"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"/>
        
        <ImageView 
            android:id="@+id/tv_item_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yyt_main_item_02"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"/>
        
        <ImageView 
            android:id="@+id/tv_item_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_yyt_main_item_01"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"/>
        
    </LinearLayout>

</LinearLayout>