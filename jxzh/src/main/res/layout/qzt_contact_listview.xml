<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_qzt_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_qzt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_qzt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="手机号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_qzt_cardId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="身份证"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_small_size" />

            <TextView
                android:id="@+id/tv_qzt_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="邮箱"
                android:textColor="@color/text_gray_deep"
               android:textSize="@dimen/textview_small_size" />

            <TextView
                android:id="@+id/tv_qzt_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="地址"
                android:textColor="@color/text_gray_deep"
               android:textSize="@dimen/textview_small_size" />
        </LinearLayout>

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_gray" />

        <LinearLayout
            android:id="@+id/ll_qzt_infoedit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="编辑"
                android:textSize="@dimen/textview_normal_size"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>