<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <include layout="@layout/layout_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法编号："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_sequence"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法编号"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>
        <TextView style="@style/line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="车牌号码："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_licensenum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="车牌号码"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>

        <TextView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法时间："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法时间"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>

        <TextView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法地点："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法地点"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>

        <TextView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法行为："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_act"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法行为"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>
        <TextView style="@style/line" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法代码："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法代码"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>
        
        <TextView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法金额："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法金额"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>
        <TextView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="违法记分："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="违法记分"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>
        
        <TextView style="@style/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="发现机关："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_org"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="发现机关"
                android:textColor="@color/black"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>
        <TextView style="@style/line" />
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="认罚驾驶证："
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/textview_normal_size" />

            <TextView
                android:id="@+id/tv_violation_license"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="驾驶证"
                android:textColor="@color/red"
                android:textSize="@dimen/textview_normal_size" />
        </LinearLayout>

        <TextView style="@style/line" />
    </LinearLayout>
    
     <TextView style="@style/line" />

    <TextView style="@style/line" />
     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >
     <CheckBox
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="同意"
                android:gravity="left|center_vertical" />
     <TextView
         		android:id="@+id/tv_agreement"
                style="@dimen/textview_normal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical"
                android:text="交通违法简易认罚协议，详情请点击..."
                android:textColor="@color/black" />
      </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/bt_violation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/blue_button_selector"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="@dimen/button_normal_size" />
        </LinearLayout>
        
     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <TextView
                style="@dimen/textview_normal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="left|center_vertical"
                android:text="@string/attention2"
                android:textColor="@color/red" />
    </LinearLayout>
        

</LinearLayout>