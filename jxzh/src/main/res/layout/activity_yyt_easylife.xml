<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/base_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/yyt_easylife_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_vp_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <android.support.v4.view.ViewPager
                    android:id="@+id/vp_top_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <com.bocop.zyt.jx.view.indicator.CirclePageIndicator
                    android:id="@+id/vp_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yyt_easylife_group_title_1">
            </RelativeLayout>

            <com.bocop.zyt.widget.MyGridView
                android:id="@+id/gv_item_01"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:stretchMode="columnWidth" >
            </com.bocop.zyt.widget.MyGridView>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yyt_easylife_group_title_2">
            </RelativeLayout>

            <com.bocop.zyt.widget.MyGridView
                android:id="@+id/gv_item_02"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:stretchMode="columnWidth" >
            </com.bocop.zyt.widget.MyGridView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yyt_easylife_group_title_3">
            </RelativeLayout>

            <com.bocop.zyt.widget.MyGridView
                android:id="@+id/gv_item_03"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:stretchMode="columnWidth" >
            </com.bocop.zyt.widget.MyGridView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/yyt_easylife_group_title_4">
            </RelativeLayout>
            <ImageView
                        android:id="@+id/iv_yyt_life_bottom_01"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:background="@drawable/ic_yyt_easylife_bottom_banner01" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>