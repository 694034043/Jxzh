<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:id="@+id/vLine"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <include layout="@layout/layout_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >
            
            <ImageView android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/ybt_photo1"/>

            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="中银保险"
                    android:textColor="@color/red"
                    android:padding="10dp"
                    android:textSize="18sp"/>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_bg"
                    android:orientation="horizontal">
                    
                    <LinearLayout 
                        android:id="@+id/ll_item_01_01_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:layout_weight="1">
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_ybt_zybx"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="中银保险-意外险"/>
                    </LinearLayout>
                    
                    <View 
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5"/>
                    
                    <LinearLayout 
                        android:id="@+id/ll_item_01_01_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="5dp"
                        android:layout_weight="1">
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_ybt_zybx"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="中银保险-家财险"/>
                    </LinearLayout>
                    
                </LinearLayout>
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="其他合作"
                    android:textColor="@color/red"
                    android:padding="10dp"
                    android:textSize="18sp"/>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_bg"
                    android:orientation="horizontal">
                    
                    <LinearLayout 
                        android:id="@+id/ll_item_02_01_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:layout_weight="1">
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_xms_picc"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="中国人民人寿保险"/>
                    </LinearLayout>
                    
                    <View 
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5"/>
                    
                    <LinearLayout 
                        android:id="@+id/ll_item_02_01_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:layout_weight="1">
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_xms_picc"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="中国人民财产保险"/>
                    </LinearLayout>
                    
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <LinearLayout 
                        android:id="@+id/ll_item_02_02_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:layout_weight="1">
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_xms_epicc"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="太平人寿"/>
                    </LinearLayout>
                    
                    <View 
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="#e5e5e5"/>
                    
                    <LinearLayout 
                        android:id="@+id/ll_item_02_02_02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:layout_weight="1">
                        <ImageView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_xms_picc"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray"
                            android:textSize="10sp"
                            android:text="中国人民健康保险"/>
                        
                        <TextView 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="即将上线"/>
                    </LinearLayout>
                    
                </LinearLayout>
                
                <View 
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:background="#e5e5e5"/>
                
                <ImageView 
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/ybt_bottom"/>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>