                    android:paddingBottom="4dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="4dp"
                    android:text="军人尊享结算服务"
                    android:textColor="#9E6F1D"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="8dp" >

                    <LinearLayout
                        android:id="@+id/ll_item_00_01_01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:scaleType="fitCenter"/>
                            <!--android:src="@drawable/ic_yjt_item_00_01_01" />-->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:text="@string/yjt_item_00_01_01"
                            android:textColor="@color/yin_ci_text_black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_item_00_01_02"
