<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <include layout="@layout/layout_activity_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="100px"
            android:padding="3dp" >

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="78px"
                android:layout_marginRight="15px"
                android:background="@drawable/loginphone" />


            <EditText
                android:id="@+id/tv_addtel"
                style="@style/normal_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20px"
                android:textSize="20sp"
                android:layout_weight="0.61"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColor="@color/color_666666"
                android:textColorHint="#D0D0D0"
                android:inputType="number"
                android:maxLength="11"
                android:padding="10dp"
                android:singleLine="true" />
        </LinearLayout>
        <TextView style="@style/line"
            android:layout_marginTop="13px"
                  android:layout_marginLeft="78px"
            android:layout_marginRight="78px"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="13px"
            android:padding="3dp" >
            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="78px"
                android:layout_marginRight="15px"
                android:background="@drawable/logintoken" />

            <EditText
                android:id="@+id/et_telverify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textColor="@color/color_666666"
                android:textColorHint="#D0D0D0"
                android:textSize="20sp" />


            <LinearLayout
                android:id="@+id/llt_telsend_msg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="78px"
                android:layout_weight="0.01"
                android:background="@drawable/button_press"
                android:gravity="center"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tv_telsend_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取短信"
                    android:textColor="@color/color_666666"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView style="@style/line"
            android:layout_marginTop="13px"
            android:layout_marginLeft="78px"
            android:layout_marginRight="78px"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="13px"
            android:padding="3dp" >

            <ImageView
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginLeft="78px"
                android:layout_marginRight="15px"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/loginphone" />


            <EditText
                android:id="@+id/tv_invite_code"
                style="@style/normal_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="20px"
                android:layout_weight="0.61"
                android:background="@null"
                android:hint="邀请码"
                android:textSize="20sp"
                android:textColor="@color/color_666666"
                android:textColorHint="#D0D0D0"
                android:maxLength="11"
                android:padding="10dp"
                android:singleLine="true" />
        </LinearLayout>
        
        <TextView style="@style/line"
            android:layout_marginTop="13px"
            android:layout_marginLeft="78px"
            android:layout_marginRight="78px"/>

        <LinearLayout
            android:id="@+id/llt_btcaradd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginRight="78px"
            android:layout_marginLeft="78px"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/TelAdd"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:background="@drawable/bt_red_press"
                android:gravity="center"
                android:text="立    即    体    验"
                android:textColor="@color/white"
                android:textSize="@dimen/button_normal_size" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="vertical" >
        </LinearLayout>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:layout_marginRight="10dp"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/llt1_btcaradd"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_marginRight="78px"
            android:layout_marginLeft="78px"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/blue_button_selector"
                android:gravity="center"
                android:text="直   接   进   入"
                android:textColor="@color/white"
                android:textSize="@dimen/button_normal_size" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
    </LinearLayout>
    
    <RelativeLayout
                android:id="@+id/rlt_telloading"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone" >
            </RelativeLayout>

</LinearLayout>

