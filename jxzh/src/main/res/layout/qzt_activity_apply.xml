<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <include layout="@layout/layout_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical" >

            <!-- 国家 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="6dp"
                    android:text="国家："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/tv_qztcountry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/xms_selector_edit"
                    android:gravity="center"
                    android:text="请选择"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 出国目的 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="出国目的："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/tv_qztdes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="50dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/xms_selector_edit"
                    android:gravity="center"
                    android:text="请选择"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>
            <!-- 出国人群 -->

            <TextView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="出国人群："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <TextView
                    android:id="@+id/tv_qzttype"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/xms_selector_edit"
                    android:gravity="center"
                    android:text="请选择"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_all_new"
                android:gravity="center_horizontal|right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="6dp"
                    android:textSize="@dimen/textview_normal_size"
                    android:text="点击选择常用联系人"
                    android:textColor="#014BA1" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="姓名："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <EditText
                    android:id="@+id/tv_qztname"
                    style="@style/normal_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 身份证号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="身份证号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <EditText
                    android:id="@+id/tv_qztid"
                    style="@style/normal_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 手机号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="手机号："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <EditText
                    android:id="@+id/tv_qzttel"
                    style="@style/normal_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 邮箱 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="邮箱："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <EditText
                    android:id="@+id/tv_qztmail"
                    style="@style/normal_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 收件地址 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:padding="6dp"
                    android:text="收件地址："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />

                <EditText
                    android:id="@+id/tv_qztadress"
                    style="@style/normal_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:layout_weight="6"
                    android:background="@drawable/bg_edittext"
                    android:gravity="center"
                    android:hint="将为您寄送签证，请确保真实无误"
                    android:singleLine="true"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <!-- 常用联系人 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加到常用联系人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <!-- 是否申请信用卡 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rb_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.8"
                    android:scaleY="0.8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同时申请办理申请中行信用卡"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:id="@+id/llt_btcaradd"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bt_qztapply"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/blue_button_selector"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_normal_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bt_qztone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="办签流程"
                    android:textColor="#014BA1"
                    android:textSize="@dimen/textview_mid_size" />

                <TextView
                    android:id="@+id/bt_qzttwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="注意事项"
                    android:textColor="#014BA1"
                    android:textSize="@dimen/textview_mid_size" />

                <TextView
                    android:id="@+id/bt_qztthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="登记材料"
                    android:textColor="#014BA1"
                    android:textSize="@dimen/textview_mid_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="光大旅行社联系电话（欧美澳新地区）："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_verysmall_size" />

                <TextView
                    android:id="@+id/tv_qzt_comtel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0791-88557805"
                    android:textColor="#014BA1"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="光大旅行社联系电话（日韩亚洲地区）："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_verysmall_size" />

                <TextView
                    android:id="@+id/tv_qzt_comtel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0791-88556913"
                    android:textColor="#014BA1"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="1dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中国银行江西省分行出国金融服务中心："
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_verysmall_size" />

                <TextView
                    android:id="@+id/tv_qzt_comtel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0791-86471421"
                    android:textColor="#014BA1"
                    android:textSize="@dimen/textview_small_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>