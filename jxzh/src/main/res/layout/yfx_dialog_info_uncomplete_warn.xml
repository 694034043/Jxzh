<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yfx_dialog_shape_info_uncomplete"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/yfx_shape_info_uncomplete_warn"
        android:paddingBottom="24dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:text="@string/infoCompleteWarn"
        android:textColor="@color/black"
        android:textSize="@dimen/textview_normal_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <Button
            android:id="@+id/btNo"
            style="@style/SmallButton_Margin"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/noNeed" />

        <Button
            android:id="@+id/btGoOn"
            style="@style/SmallButton_Margin"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/goOn" />
    </LinearLayout>

</LinearLayout>