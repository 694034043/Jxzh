<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <include layout="@layout/layout_activity_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 页面1：查看驾驶证信息 -->

        <LinearLayout
            android:id="@+id/ll_traffic_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <!-- 姓名 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/ownername"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvownername_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 驾驶证号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/drivenum"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvdrivenum_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 档案编号 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/filenum"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvfilenum_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 手机号码 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tel"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvtel_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 准驾车型 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/quasidriving"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvquasidriving_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 罚分 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/penaltyscore"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvpenaltyscore_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <!-- 状态 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/state"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvstate_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />
            <!-- 状态 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/replacementdate"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvreplacementdate_licquery"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <Button
                android:id="@+id/bt_remove_license"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="@drawable/blue_button_selector"
                android:gravity="center"
                android:text="解除绑定"
                android:textColor="@color/white"
                android:textSize="@dimen/button_normal_size" />
        </LinearLayout>

        <!-- 页面2：绑定驾驶证 -->

        <LinearLayout
            android:id="@+id/ll_traffic_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:textSize="@dimen/textview_small_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:text="交通自助违法处理需要绑定驾驶证信息" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:textSize="@dimen/textview_normal_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:padding="6dp"
                        android:text="@string/filenum"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/edfilenum_add"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="12dp"
                        android:maxLength="12"
                        android:layout_weight="6"
                        android:background="@drawable/bg_edittext"
                        android:hint=""
                        android:padding="4dp" />
                </LinearLayout>

                <TextView style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:padding="6dp"
                        android:text="手机号码："
                        android:textColor="@color/black" 
                        android:textSize="@dimen/textview_normal_size"/>

                    <EditText
                        android:id="@+id/tv_addlicetel"
                        style="@style/normal_edit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:layout_weight="6"
                        android:background="@drawable/bg_edittext"
                        android:hint=""
                        android:inputType="number"
                        android:maxLength="11"
                        android:padding="4dp"
                        android:singleLine="true" />
                </LinearLayout>

                <TextView style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp" >

                    <EditText
                        android:id="@+id/et_telliceverify_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="6dp"
                        android:textColor="@color/black"
                        android:textColorHint="#D0D0D0"
                        android:textSize="@dimen/textview_normal_size" />

                    <LinearLayout
                        android:id="@+id/llt_tellicesend_msg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_weight="6"
                        android:background="@drawable/send_btn_selector"
                        android:gravity="center"
                        android:padding="8dp" >

                        <RelativeLayout
                            android:id="@+id/rlt_telliceloading"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone" >
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_tellicesend_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="获取验证码"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textview_normal_size" />
                    </LinearLayout>
                </LinearLayout>

                <TextView style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical" >

                    <TextView
                        android:textSize="@dimen/textview_small_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/kindlyremandfile"
                        android:textColor="@color/red" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btlicenseadd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/blue_button_selector"
                        android:gravity="center"
                        android:text="立即绑定"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_normal_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/phone_tip"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="9dp"
                        android:text="温馨提示"
                        android:textColor="@color/phone_tip"
                        android:textSize="@dimen/textview_normal_size" />
                     
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingBottom="10dp"
                        android:paddingLeft="9dp"
                        android:paddingRight="6dp"
                        android:paddingTop="10dp"
                        android:text="以上信息为交管局查询所需信息，仅用于帮您查询违法，您的信息将严格保密，请放心使用。"
                        android:textColor="@color/phone_tip"
                        android:textSize="@dimen/textview_small_size" />
                </LinearLayout>
                 
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>