<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/yjt_dialog_bg"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#E2202B">

		<TextView
			android:text="@string/tv_yjt_info_dialog_title"
			android:layout_centerInParent="true"
			android:textStyle="bold"
			android:textSize="20sp"
			android:textColor="@color/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<LinearLayout
			android:layout_width="50dp"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:layout_alignParentRight="true"
			android:gravity="center"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/close"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:background="@drawable/ic_close"/>
		</LinearLayout>
	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/yin_jun_tong_info_dialog_prompt"
			android:textSize="16sp"
			android:textColor="@color/black"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:gravity="center"
			android:orientation="horizontal">

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:text="姓名:"/>

			<EditText
				android:id="@+id/et_name"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textSize="16sp"
				android:background="@null"
				android:hint="输入姓名"
				android:maxLength="10"
				android:textColorHint="@color/hintColor"
				android:inputType="textPersonName"/>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:background="#C0C0C0"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="性别:"
				android:textSize="16sp"/>

			<Spinner
				android:id="@+id/sp_sex"
				android:textSize="@dimen/textview_normal_size"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				style="@style/MyTheme"
				android:background="@null"
				android:spinnerMode="dropdown"/>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:background="#C0C0C0"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="军人卡卡号:"
				android:textSize="16sp"/>

			<EditText
				android:id="@+id/et_cardNo"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textSize="16sp"
				android:inputType="number"
				android:hint="输入军人卡卡号"
				android:maxLength="20"
				android:textColorHint="@color/hintColor"
				android:background="@null"/>
		</LinearLayout>
		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:background="#C0C0C0"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="开户行:"
				android:textSize="16sp"/>

			<Spinner
				android:id="@+id/sp_branch"
				android:textSize="@dimen/textview_normal_size"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				style="@style/MyTheme"
				android:background="@null"
				android:spinnerMode="dropdown"/>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:background="#C0C0C0"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:gravity="center"
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="100dp"
				android:layout_height="wrap_content"
				android:text="联系方式:"
				android:textSize="16sp"/>

			<EditText
				android:id="@+id/et_call"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textSize="16sp"
				android:background="@null"
				android:hint="输入联系方式"
				android:maxLength="11"
				android:textColorHint="@color/hintColor"
				android:inputType="number"/>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="#C0C0C0"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_marginBottom="5dp"/>

		<Button
			android:id="@+id/btn_up"
			android:layout_gravity="center_horizontal"
			android:text="确定"
			android:textColor="#50545D"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:background="@drawable/yjt_dialog_btn_bg"
			android:layout_width="140dp"
			android:layout_height="40dp"/>

	</LinearLayout>
</LinearLayout>
