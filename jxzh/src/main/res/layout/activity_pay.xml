<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all_new"
    android:orientation="vertical" >

    <include layout="@layout/layout_activity_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="订单号："
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_pay_order"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="处罚单号："
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_pay_peccancyNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="处罚单号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="车牌号码："
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_pay_licenseNum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvSumName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="罚款金额："
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_pay_sum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0元"
                    android:textColor="@color/bg_red"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="滞纳金："
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_pay_lateAmt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="应缴金额："
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tv_pay_yjAmt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <LinearLayout
                android:id="@+id/llselectPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/list_selector"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="支付方式"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="@dimen/textview_normal_size" />

                <TextView
                    android:id="@+id/tvPayType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/logo_boc"
                    android:drawablePadding="5dp"
                    android:gravity="right|center_vertical"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="中国银行"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_normal_size" />
            </LinearLayout>

            <TextView style="@style/line" />

            <include layout="@layout/common_bocpay_layout" />

            <include layout="@layout/common_bindcard_layout" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>