<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/red"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <com.bocop.zyt.bocop.jxplatform.view.BackButton
            android:id="@+id/iv_imageLeft"
            style="@style/title_image_style"
            android:layout_gravity="left|center_vertical"
            android:clickable="true"
            android:orientation="horizontal"
            android:src="@drawable/title_arrow_back" />

        <TextView
            android:id="@+id/tv_titleName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivItem"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            android:background="@drawable/shape_title_button"
            android:layout_alignParentRight="true"
            android:src="@drawable/zyyr_user"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="我的"
            android:padding="6dp"
            android:layout_marginRight="6dp"
            android:textSize="@dimen/textview_little_bigger_size"
            android:background="@drawable/select_title_bg"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>