<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/G2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_bg"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/theme_color">

        <ImageView
            android:id="@+id/iv_finish"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="9dp"
            android:src="@drawable/left_white_back" />


        <TextView
            android:id="@+id/tv_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/iv_music"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="9dp"
            android:src="@drawable/icon_music_on" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mdx.framework.widget.MImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/j120dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@color/G2"
            android:id="@+id/iv_bg"/>
        <ListView
            android:id="@+id/mMPageListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:listSelector="#00000000"></ListView>
    </RelativeLayout>

</LinearLayout>